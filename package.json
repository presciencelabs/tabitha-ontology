{
	"name": "app",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"prepare": "svelte-kit sync",
		"check": "pnpm prepare && (pnpm check:svelte & pnpm check:lint)",
		"check:svelte": "svelte-check --tsconfig ./jsconfig.json",
		"check:lint": "eslint .",
		"check:lint:fix": "eslint . --fix",
		"build": "vite build",
		"dev": "wrangler pages dev .svelte-kit/cloudflare",
		"test:e2e": "playwright test",
		"test:e2e:dev": "playwright test --ui",
		"precommit": "pnpm check && pnpm build",
		"clean:svelte": "rimraf .svelte-kit",
		"clean:node": "rimraf node_modules",
		"clean:powerwash": "(pnpm clean:svelte & pnpm clean:node) && pnpm install"
	},
	"dependencies": {
		"@sveltejs/kit": "^2.6.1",
		"@tailwindcss/typography": "^0.5.15",
		"daisyui": "^4.12.11",
		"svelte": "^4.2.19",
		"tailwindcss": "^3.4.13"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240925.0",
		"@eslint/js": "^9.11.1",
		"@iconify/svelte": "^4.0.2",
		"@playwright/test": "^1.47.2",
		"@stylistic/eslint-plugin": "^2.8.0",
		"@sveltejs/adapter-cloudflare": "^4.7.2",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@types/node": "^22.7.4",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.11.1",
		"eslint-plugin-svelte": "^2.44.1",
		"globals": "^15.10.0",
		"postcss": "^8.4.47",
		"rimraf": "^6.0.1",
		"svelte-check": "^4.0.4",
		"svelte-eslint-parser": "^0.41.1",
		"typescript": "^5.6.2",
		"vite": "^5.4.8"
	}
}
